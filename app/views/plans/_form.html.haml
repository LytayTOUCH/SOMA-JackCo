= simple_form_for @plan, html: {class: 'form-horizontal'} do |f|
  .form-group
    %label.col-xs-2.control-label{for: 'plan_name'} Name
    .col-xs-5
      = f.input :name, label: false, input_html: {class: "form-control"}
      %span.help-block= f.error :name
  .form-group
    %label.col-xs-2.control-label{for: 'plan_quantity'} Quantity
    .col-xs-5
      = f.input :quantity, label: false, input_html: {class: "form-control"}
      %span.help-block= f.error :quantity
  .form-group
    %label.col-xs-2.control-label{for: 'plan_unit'} Unit
    .col-xs-5
      = f.input :unit, label: false, selected: 2, collection: [["Kg", "Kg"], ["Liter", "Liter"], ["Piece", "Piece"], ["Set", "Set"]], input_html: {class: "form-control"}
      %span.help-block= f.error :unit
  .form-group
    %label.col-xs-2.control-label{for: 'plan_year'} Year
    .col-xs-5
      = f.input :year, label: false, input_html: {class: "form-control"}
      %span.help-block= f.error :year
  .form-group
    .col-xs-7
      .pull-right
        = render partial: 'form_button', locals: { f: f }
