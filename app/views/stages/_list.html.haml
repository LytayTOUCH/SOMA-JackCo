%table.table
  %thead
    %tr
      %th.col-md-5= "Stage Name"
      %th.col-md-2= "Fruit Type"
      %th.col-md-4= "Note"
      %th.col-md-1= "Actions"
  %tbody    
    - @stages.each do |stage|
      %tr
        %td= stage.name
        %td= stage.fruit_type
        %td= stage.note
        %td
          - if can? :update, Stage
            = link_to "Edit", edit_stage_path(stage)
          
          / = link_to "Delete", stage, method: :delete, :data => { :confirm => 'Are you sure?'}

.pull-right
  = paginate @stages