%table.list_data_table
  %thead
    %tr
      %th.col-md-2= "Time"
      %th.col-md-1= "User"
      %th.col-md-2= "Description"
      %th.col-md-7= "Object"
  %tbody
    - @logs.each do |log|
      %tr
        %td= log.created_at
        %td= log.user.email
        %td= log.note
        %td= log.object

:javascript
  $(document).ready(function() {
    $('.list_data_table').DataTable({
      "bSort": false,
      "bFilter": false,
      "bInfo": false,
      "bPaginate": false,
      "columnDefs": [{ "visible": false, "targets": 1 }],
      "order": [[ 1, 'asc' ]],
      "drawCallback": function ( settings ) {
            var api = this.api();
            var rows = api.rows( {page:'current'} ).nodes();
            var last=null;
 
            api.column(1, {page:'current'} ).data().each( function ( group, i ) {
                if ( last !== group ) {
                    $(rows).eq( i ).before(
                        '<tr class="group"><td colspan="3">'+group+'</td></tr>'
                    );
 
                    last = group;
                }
            } );
        }
    });
  });