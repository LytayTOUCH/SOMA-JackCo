= simple_form_for @activity, url: activities_path, method: :get, html: {novalidate: true, class: 'form-inline'} do |f|
  .input-group.col-xs-5
    = f.input :starts_at, as: :string, label: false, input_html: {class: "form-control", placeholder: "Search by date"}
    .input-group-btn
      = f.submit :Search, class: "btn btn-default"