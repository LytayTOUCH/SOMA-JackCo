:css
  @media print {
    @page {
      margin: 0;
      size: A4 landscape;
    }
    
    body { background: white; }
  
    .report_filter, .print_button, hr{ display: none; }
    
    .container {
      width: 90%;
      border: 0;
      padding: 0;
      float: none !important;
    }
    
    #main_table{
      position: absolute;
      left: 50px;
    }
    
    #main_table td, #main_table th{
      padding: 5px !important;
    }
    
    #table_header{
      background-color: #eee !important;
    }
    
    .row_1 *{color: #3333FF !important;}
    .row_2 *{color: #852314 !important;}
    .row_3 *{color: #55DD33 !important;}
    .row_4 *{color: #5A287D !important;}
    .row_5 *{color: #FF9600 !important;}
    .row_6 *{color: #1EA6A3 !important;}
    .row_7 *{color: #FF0055 !important;}
    
    #coconut_classification_chart{
      position: absolute;
      top: 350px;
    }
  }
