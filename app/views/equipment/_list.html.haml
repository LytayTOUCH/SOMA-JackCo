%table#list_data_table
  %thead
    %tr
      %th.col-md-2= "Name"
      %th.col-md-1= "Type"
      %th.col-md-2= "Planting Project"
      %th.col-md-2= "Status"
      %th.col-md-1= "Action"
  %tbody
    - @equipment.each do |e|
      %tr
        %td= e.name
        %td= e.equipment_type.name
        %td= PlantingProject.find(e.planting_project_id).name
        %td
          = form_for(e) do |f|
            - if e.status
              %span{style: "color:green;"}= "active"
              |
              #{f.hidden_field :status, value: false}
              #{submit_tag "deactivate", :class => "btn btn-default btn-xs"}
            - else
              %span{style: "color:red;"}= "inactive"
              |
              #{f.hidden_field :status, value: true}
              #{submit_tag "activate", :class => "btn btn-default btn-xs"}
        %td
          = link_to "Edit", edit_equipment_path(e)
