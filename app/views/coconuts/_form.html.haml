= simple_form_for @coconut, html: { class: "form-horizontal" } do |f|
  .container
    .row
      .col-md-7
        .form-group
          %label.col-xs-3.control-label.text-left Code
          .col-xs-9
            = f.input :code, label: false, error: false, input_html: { class: "form-control" }
        .form-group
          %label.col-xs-3.control-label.text-left Field
          .col-xs-9
            = f.input :field_uuid, label: false, error: false, collection: Field.all.map{ |p| [p.name, p.uuid] }, input_html: { class: "form-control" }
        .form-group
          %label.col-xs-3.control-label.text-left Production stage
          .col-xs-9
            = f.input :stage_uuid, label: false, error: false, collection: ProductionStage.all.map { |p| [p.name, p.uuid] }, input_html: { class: "form-control" }    
        .form-group
          %label.col-xs-3.control-label.text-left Coconut Type
          .col-xs-9
            = f.input :coco_type, label: false, error: false, collection: ["Khmer", "Malaysia", "Thailand"], input_html: { class: "form-control" }
        .form-group
          %label.col-xs-3.control-label.text-left Planting Date
          .col-xs-9
            .input-group.date.date_pick
              = f.text_field :planting_date, :class => "form-control", :type => "text", :data => {:date_format => "YYYY-MM-DD"}, :placeholder => "Year-Month-Day", :readonly => true
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar    
        .form-group
          %label.col-xs-3.control-label.text-left Note
          .col-xs-9
            = f.input :note, label: false, input_html: { class: "form-control" }
        .form-group
          %label.col-xs-3.control-label.text-left Active
          .col-xs-9
            = f.input :active, label: false
        .form-group
          .col-xs-12
            .pull-right
              = render partial: 'form_button', locals: { f: f }
      .col-md-4
        = render "error", :obj => @coconut        

:javascript
  $(document).ready(function() {
    $(function () {
      $('.date_pick').datetimepicker({
        pickTime: false
      });
    });
  });