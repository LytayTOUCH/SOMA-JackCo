%table.table
  %thead
    %tr
      %th.col-md-5= "Name"
      %th.col-md-3= "Note"
      %th.col-md-3= "Active"
      %th.col-md-1= "Actions"
  - @user_groups.each do |user_group|
    %tr
      %td= user_group.name
      %td= user_group.note
      %td
        - if user_group.active?
          = "Actived"
        - else
          = "Inactived"
      %td
        - if can? :update, UserGroup
          = link_to "Edit", edit_user_group_path(user_group)
.pull-right
  = paginate @user_groups
