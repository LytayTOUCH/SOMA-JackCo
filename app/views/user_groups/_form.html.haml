= simple_form_for @user_group, html: { class: "form-horizontal" } do |f|
  .form-group
    %label.col-xs-2.control-label Name
    .col-xs-5
      = f.input :name, label: false, input_html: { class: "form-control" }
      %span.help-block= f.error :name
  .form-group
    %label.col-xs-2.control-label Note
    .col-xs-5
      = f.input :note, label: false, input_html: { class: "form-control" }
      %span.help-block= f.error :note
  .form-group
    %label.col-xs-2.control-label Active
    .col-xs-5
      = f.input :active, label: false
      %span.help-block= f.error :active

  .panel.panel-default
    .panel-heading.background-color
      %b Permissions
    .panel-body
    %table.table
      %thead
        %tr
          .col-xs-1       
            %th{style: "text-align:center;"}
              = "Resource Name"
            %th{style: "text-align:center;"}
              = "Full control"
            %th{style: "text-align:center;"}
              = "View lists"
            %th{style: "text-align:center;"}
              = "Create"
            %th{style: "text-align:center;"}
              = "Update"
            %th{style: "text-align:center;"}
              = "Delete"

          - @resources.each do |resource|
            %tr
              %td{style: "font-size: 15px;"} 
                / = check_box_tag "user_group[resource_ids][]", resource.id, @user_group.resources.include?(resource)
                = h resource.name.camelize
              %td{style: "text-align:center;"}
                %input#full{name: "full_" + resource.uuid, type: "checkbox"}

              %td{style: "text-align:center;"}
                %input#list{name: "list_" + resource.uuid, type: "checkbox"}

              %td{style: "text-align:center;"}
                %input#create{name: "create_" + resource.uuid, type: "checkbox"}

              %td{style: "text-align:center;"}
                %input#update{name: "update_" + resource.uuid, type: "checkbox"}

              %td{style: "text-align:center;"}
                %input#delete{name: "delete_" + resource.uuid, type: "checkbox"}

                / = simple_form_for @permission do |f|
                /   = f.input :access_delete, label: false
    
  .form-group
    .col-xs-12
      .pull-right
        = render partial: 'form_button', locals: { f: f }
