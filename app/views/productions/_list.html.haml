%table#list_data_table
  %thead
    %tr
      %th.col-md-4= "Production Type"
      %th.col-md-4= "Status"
      %th.col-md-2= "Note"
      %th.col-md-2= "Actions"
  - @productions.each do |production|
    %tr
      %td= production.planting_project.name
      %td= production.status
      %td= production.unit_of_measurement.name
      %td
        - if can? :update, production
          = link_to "Edit", edit_production_path(production)