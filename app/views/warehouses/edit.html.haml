= link_to 'Back', warehouses_path
%h1 Editing Warehouse 
= simple_form_for @warehouse, html: { class: "form-horizontal" } do |f|
  .form-group
    %label.col-xs-1.control-label.text-left Name
    / .col-xs-5 .col-sm-offset-1
    .col-xs-5
      = f.input :name, label: false, input_html: { class: "form-control" }
      %span.help-block= f.error :name
  .form-group
    %label.col-xs-1.control-label.text-left Supervisor
    .col-xs-5
      = f.input :labor_uuid, label: false, input_html: { class: "form-control" }
      %span.help-block= f.error :labor_uuid    
  .form-group
    %label.col-xs-1.control-label.text-left Warehouse Type
    .col-xs-5
      = f.input :warehouse_type_uuid, label: false, collection: @warehouse_types, input_html: {class: "form-control"}, include_blank: false
      / = collection_select(:warehouse_type_uuid,@warehouse_types,:uuid,:name)
      / = f.collection_select :warehouse_type_uuid, @warehouse_types, :warehouse_type_uuid, :name, include_blank: true
      %span.help-block= f.error :warehouse_type_uuid
  .form-group
    %label.col-xs-1.control-label.text-left Address
    .col-xs-5
      = f.input :address, label: false, input_html: { class: "form-control" }
      %span.help-block= f.error :address
  .form-group
    %label.col-xs-1.control-label.text-left Description
    .col-xs-5
      = f.input :description, label: false, input_html: { class: "form-control" }
      %span.help-block= f.error :description        
  .form-group
    %label.col-xs-1.control-label.text-left Active
    .col-xs-5
      = f.input :active, label: false
      %span.help-block= f.error :active
  .form-group
    .col-xs-6
      .pull-right
        = f.submit class: "btn btn-primary", "data-disable-with" => "Update Warehouse"