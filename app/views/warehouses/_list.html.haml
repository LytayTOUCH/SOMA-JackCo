%table.table
  %thead
    %tr
      %th.col-md-3 Name
      %th.col-md-4 Supervisor
      %th.col-md-2 Warehouse Type
      %th.col-md-1 Active
      %th.col-md-1 Actions
  - @warehouses.each do |warehouse|
    %tr
      %td= warehouse.name
      %td= warehouse.labor_uuid
      %td= warehouse.warehouse_type.name
      %td
        - if warehouse.active?
          = "active"
        - else  
          = "inactive"
      %td
        - if can? :update, warehouse
          = link_to "Edit", edit_warehouse_path(warehouse)
        = '|'  
        = link_to "Show", warehouse_path(warehouse)

.pull-right
  = paginate @warehouses