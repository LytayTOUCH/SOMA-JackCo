%table.table
  %thead
    %tr
      %th.col-md-2= "Name"
      %th.col-md-3= "Supervisor"
      %th.col-md-2= "Warehouse Type"
      %th.col-md-2= "Active"
      %th.col-md-1= "Actions"
  - @warehouses.each do |warehouse|
    %tr
      %td= warehouse.name
      %td= warehouse.labor_uuid
      %td= warehouse.warehouse_type.name
      %td
        = form_for(warehouse) do |f|
          - if warehouse.active
            %span{style: "color:auto;"}= "active"
            |
            #{f.hidden_field :active, value: false}
            #{submit_tag "inactivate", :class => "btn btn-default btn-xs"}
          - else
            %span{:style => "color:red;"}= "inactive"
            |
            #{f.hidden_field :active, value: true}
            #{submit_tag "activate", :class => "btn btn-default btn-xs"}
      %td
        - if can? :update, warehouse
          = link_to "Edit", edit_warehouse_path(warehouse)
        = '|'  
        = link_to "Show", warehouse_path(warehouse)

.pull-right
  = paginate @warehouses