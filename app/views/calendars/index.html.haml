#calendar
/ Large modal
#myModal.modal.fade.bs-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4#myLargeModalLabel.modal-title Choose an Activity
      .modal-body
        .row
          .activity-type-chooser-list
            %form{ action: new_event_path }          
              %input#current-date{:type => "hidden", name: "current-date"}
              .col-md-2.col-md-offset-2
                %input.btn.btn-primary.activity-pannel{type: "submit", value: "Tilling"}
              .col-md-2
                %input.btn.btn-danger.activity-pannel{type: "submit", value: "Planting"}
              .col-md-2
                %input.btn.btn-warning.activity-pannel{type: "submit", value: "Fertilizing"}
              .col-md-2
                %input.btn.btn-danger.activity-pannel{type: "submit", value: "Harvesting"}
      .modal-footer
        .pull-right
          = submit_tag 'Cancel', :type => :reset, :class => "btn btn-default", "data-dismiss" => "modal", "aria-hidden" => "true"