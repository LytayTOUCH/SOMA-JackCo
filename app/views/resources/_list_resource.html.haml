%table.table
  %thead
    %tr
      %th.col-md-3= "Name"
      %th.col-md-5= "Note"
      %th.col-md-3= "Active"
      %th.col-md-1= "Actions"
  - @resources.each do |resource|
    %tr
      %td= resource.name
      %td= resource.note
      %td
        - if resource.active?
          = "Actived"
        - else
          = "Inactived"
      %td
        - if can? :update, resource
          = link_to "Edit", edit_resource_path(resource)
.pull-right
  = paginate @resources
