= simple_form_for @warehouse_item_transaction, html: { class: "form-horizontal" } do |f|
  .form-group
    %label.col-xs-2.control-label Requested By *
    .col-xs-5
      = f.input :sender_id, label: false, collection: @warehouses, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
    %span.help-block= f.error :sender_id
  .form-group
    %label.col-xs-2.control-label Sent By *
    .col-xs-5
      = f.input :receiver_id, label: false, collection: @warehouses, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
    %span.help-block= f.error :receiver_id
  .form-group
    %label.col-xs-2.control-label Material *
    .col-xs-5
      = f.input :material_id, label: false, collection: @materials, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
    %span.help-block= f.error :material_id
  .form-group
    %label.col-xs-2.control-label Amount *
    .col-xs-5
      = f.input :amount, label: false, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
    %span.help-block= f.error :amount
  .form-group
    %label.col-xs-2.control-label Request Date
    .col-xs-5
      = f.input :requested_date, label: false, input_html: { class: "form-control" }, error_html: { class: "err_msg" }, readonly: true
    %span.help-block= f.error :requested_date
  .form-group
    %label.col-xs-2.control-label Due Date *
    .col-xs-5
      .input-group.date.date_pick
        = f.text_field :due_date, :class => "form-control", :type => "text", :data => {:date_format => "YYYY-MM-DD"}, :placeholder => "Year-Month-Day"
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar    
      %span.help-block= f.error :due_date
  .form-group
    %label.col-xs-2.control-label Request Number *
    .col-xs-5
      = f.input :requested_number, label: false, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
    %span.help-block= f.error :requested_number
  .form-group
    %label.col-xs-2.control-label Note
    .col-xs-5
      = f.input :note, label: false, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
    %span.help-block= f.error :note          
  .form-group
    %label.col-xs-2.control-label Active
    .col-xs-5
      = f.input :active, label: false
      %span.help-block= f.error :active
  .form-group
    .col-xs-7
      .pull-right
        = render partial: 'form_button', locals: { f: f }

:javascript
  $(document).ready(function() {
    $(function () {
      $('.date_pick').datetimepicker({
        pickTime: false
      });
    });
  });        