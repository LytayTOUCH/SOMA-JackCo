= form_for(warehouse_item_transaction, remote: true, html: {role: :form, 'data-model' => 'farm', :class => "form-horizontal"}) do |f|
  .form-group.form-center
    %label.col-xs-2.control-label Reason *
    .col-xs-10
      = f.text_area :reason_for_closing_transaction, label: false, class: "form-control", error_html: { class: "err_msg" }, cols: "500", rows: "5", id: "reason_text_area"
  .form-group.form-center
    .col-xs-12
      .pull-right
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
        = f.submit "OK", :class => "btn btn-primary"