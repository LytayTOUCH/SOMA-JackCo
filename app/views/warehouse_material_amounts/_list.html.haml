- @warehouses.each do |wh|
  .received-header{style: "word-spacing: 0px;"}
    = wh.name
  %hr
  %table.list_data_table
    %thead
      %tr
        %th.col-md-4= "Material Name"
        %th.col-md-2= "Warehouse"
        %th.col-md-2= "Material Category"
        %th.col-md-3= "Qty In Stock"
        %th.col-md-1= "Action"
    %tbody
      - wh.warehouse_material_amounts.each do |wh_a|
        %tr
          %td= wh_a.material.name
          %td= wh_a.warehouse.name
          %td= wh_a.material.material_category.name
          %td
            = wh_a.amount
            = "("
            = wh_a.material.unit_of_measurement.name
            = ")"
          %td
            = link_to "Adjust", "material_adjustments/new/#{wh_a.uuid}"
  %div{style: "height: 35px;"}
:javascript
  $(document).ready(function() {
    $('.list_data_table').DataTable({
      "bSort": false
    });
  });