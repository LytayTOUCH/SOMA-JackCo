%table.table
  %thead
    %tr
      %th.col-md-3= "Name"
      %th.col-md-3= "Phone"
      %th.col-md-4= "Email"
      %th.col-md-1= "Status"
      %th.col-md-1= "Action"
  %tbody
    - @suppliers.each do |supplier|
      %tr
        %td= supplier.name
        %td= supplier.phone
        %td= supplier.email
        %td
          = form_for(supplier) do |f|
            - if supplier.active
              %span{style: "color:green;"}= "active"
              |
              #{f.hidden_field :active, value: false}
              #{submit_tag "inactivate", :class => "btn btn-default btn-xs"}
            - else
              %span{:style => "color:red;"}= "inactive"
              |
              #{f.hidden_field :active, value: true}
              #{submit_tag "activate", :class => "btn btn-default btn-xs"}
        %td
          - if can? :update, Supplier
            = link_to "Edit", edit_supplier_path(supplier)
.pull-right
  = paginate @suppliers
