= simple_form_for @warehouse_type, html: { class: "form-horizontal" } do |f|
  .container
    .row
      .col-md-7
        .form-group
          %label.col-xs-2.control-label Name *
          .col-xs-9
            = f.input :name, label: false, input_html: { class: "form-control" }, error: false
        .form-group
          %label.col-xs-2.control-label Note
          .col-xs-9
            = f.input :note, label: false, input_html: { class: "form-control" }, error_html: { class: "err_msg" }
        .form-group
          %label.col-xs-2.control-label Active
          .col-xs-9
            = f.input :active, label: false
            %span.help-block= f.error :active
        .form-group
          .col-xs-12
            .pull-right
              = render partial: 'form_button', locals: { f: f }
      .col-md-4
        = render "error", :obj => @warehouse_type        
